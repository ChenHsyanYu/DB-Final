CREATE DATABASE Groupbuy;
USE Groupbuy;
CREATE TABLE Group_buying_merchant(
	merchant_userid VARCHAR(255) NOT NULL,
	ch_store_name VARCHAR(255),
	en_store_name VARCHAR(255),
	address VARCHAR(255),
	business_hours VARCHAR(255),
	CONSTRAINT Group_buying_merchant_PK  PRIMARY KEY(merchant_userid),
	UNIQUE(en_store_name)
);
CREATE TABLE Customer(
	userid VARCHAR(255) NOT NULL,
	phone VARCHAR(10),
	blacklist TINYINT(1) ,
	member_level VARCHAR(255),
	CONSTRAINT Customer_PK PRIMARY KEY(userid)
);
CREATE TABLE Product(
	product_id BIGINT UNSIGNED NOT NULL AUTO_INCREMENT PRIMARY KEY,
	price BIGINT,
	product_describe TEXT,
	supplier_name VARCHAR(255),
	product_name VARCHAR(255),
	product_picture BLOB 
);

CREATE TABLE Group_buying_product(
	group_buying_number BIGINT UNSIGNED NOT NULL AUTO_INCREMENT PRIMARY KEY,
	merchant_userid VARCHAR(255) NOT NULL,
	purchase_quantity INT,
	launch_date DATETIME,
	statement_date DATETIME,
	arrival_date DATETIME,
	due_days SMALLINT,
	inventory INT,
	income DOUBLE(8, 2),
	cost DOUBLE(8, 2),
	product_id BIGINT UNSIGNED,
	CONSTRAINT Group_buying_product_FK1 FOREIGN KEY(merchant_userid) REFERENCES Group_buying_merchant(merchant_userid),
	CONSTRAINT Group_buying_product_FK2 FOREIGN KEY(product_id) REFERENCES Product(product_id)
);

CREATE TABLE `Order`(
	order_number BIGINT UNSIGNED NOT NULL AUTO_INCREMENT PRIMARY KEY,
	userid VARCHAR(255) NOT NULL,
	group_buying_number BIGINT UNSIGNED NOT NULL ,
	quantity INT,
	receive_status Boolean,
	CONSTRAINT Order_FK1 FOREIGN KEY(userid) REFERENCES Customer(userid),
	CONSTRAINT Order_FK2 FOREIGN KEY(group_buying_number) REFERENCES Group_buying_product(group_buying_number)
);
